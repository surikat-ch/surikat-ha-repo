ARG BUILD_FROM=python:3.11-slim
FROM ${BUILD_FROM}

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        bash \
        python3 \
        python3-pip && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

COPY run.sh /run.sh
RUN chmod +x /run.sh

COPY custom_components /config/custom_components

CMD [ "/run.sh" ]
